<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/menuWorkShift">

    <fragment
        android:id="@+id/menuRoute"
        android:name="studio.bz_soft.freightforwarder.ui.route.RouteFragment"
        android:label="@string/fragment_route_title"
        tools:layout="@layout/fragment_route" >
        <action
            android:id="@+id/action_menuRoute_to_addStoreFragment"
            app:destination="@id/addStoreFragment" />
    </fragment>
    <fragment
        android:id="@+id/menuReports"
        android:name="studio.bz_soft.freightforwarder.ui.reports.ReportsFragment"
        android:label="@string/fragment_reports_title"
        tools:layout="@layout/fragment_reports">
    </fragment>
    <fragment
        android:id="@+id/menuProfile"
        android:name="studio.bz_soft.freightforwarder.ui.profile.ProfileFragment"
        android:label="@string/fragment_profile_title"
        tools:layout="@layout/fragment_profile"/>
    <fragment
        android:id="@+id/addStoreFragment"
        android:name="studio.bz_soft.freightforwarder.ui.route.store.AddStoreFragment"
        android:label="AddStoreFragment"
        tools:layout="@layout/fragment_add_store"/>
    <fragment
        android:id="@+id/menuWorkShift"
        android:name="studio.bz_soft.freightforwarder.ui.shift.WorkShiftFragment"
        android:label="@string/fragment_work_shift_title"
        tools:layout="@layout/fragment_work_shift">
        <action
            android:id="@+id/action_menuWorkShift_to_addStoreFragment"
            app:destination="@id/addStoreFragment" />
    </fragment>
</navigation>